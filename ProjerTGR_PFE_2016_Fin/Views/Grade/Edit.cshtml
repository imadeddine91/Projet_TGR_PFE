@model ProjerTGR_PFE_2016_Fin.Models.Grade

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title"> <i class="fa fa-pencil-square-o" aria-hidden="true" style="margin-right:5px;"></i>Edit</h4>
</div>
<div class="modal-body">
    @using (Html.BeginForm("Edit", "Grade", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
          
            <table>
                <tr>
                    @Html.HiddenFor(model => model.id_grad)
                    <td id="td_label" class="display-label">@Html.LabelFor(model => model.Num_gard)</td>

                    <td id="td_out" class="display-field">

                        @Html.EditorFor(model => model.Num_gard ,new { @class = "form-control", @placeholder = "Text input" })
                        @Html.ValidationMessageFor(model => model.Num_gard)

                       
                    </td>
                </tr>
                <tr>
                    <td id="td_label" class="display-label">@Html.LabelFor(model => model.Nom_grad)</td>
                    <td id="td_out" class="display-field">
                        @Html.EditorFor(model => model.Nom_grad)
                        @Html.ValidationMessageFor(model => model.Nom_grad)
                    </td>
                </tr>
                <tr>
                    <td id="td_label" class="display-label"> @Html.LabelFor(model => model.id_corp, "Corps") </td>
                    <td id="td_out" class="display-field" style="width:30px;">
                        @Html.DropDownList("id_corp", String.Empty)
                        @Html.ValidationMessageFor(model => model.id_corp)
                    </td>
                </tr>
            </table>

            <div class="modal-footer">
                <input type="submit" class="btn btn-primary" value="Save changes" />
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
              
            </div>
        </fieldset>
    }

    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
