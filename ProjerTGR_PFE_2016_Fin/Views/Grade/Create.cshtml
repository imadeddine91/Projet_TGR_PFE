@model ProjerTGR_PFE_2016_Fin.Models.Grade

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title"><i class="fa fa-plus-square-o" aria-hidden="true"></i> Ajouter </h4>
</div>

<div class="modal-body">
    @using (Html.BeginForm("Create", "Grade", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)

        <fieldset>
           
            <table>
                
                <tr>
                    <td id="td_label" class="display-label">@Html.LabelFor(model => model.Num_gard)</td>
                    <td id="td_out" class="deditor-field">
                        @Html.EditorFor(model => model.Num_gard)
                        @Html.ValidationMessageFor(model => model.Num_gard)
                    </td>
                </tr>

                <tr>
                    <td id="td_label" class="display-label">@Html.LabelFor(model => model.Nom_grad)</td>
                    <td id="td_out" class="deditor-field">
                        @Html.EditorFor(model => model.Nom_grad)
                        @Html.ValidationMessageFor(model => model.Nom_grad)
                    </td>
                </tr>

                <tr>
                    <td id="td_label" class="display-label">@Html.LabelFor(model => model.id_corp, "Corps")</td>
                    <td id="td_out" class="deditor-field">
                        @Html.DropDownList("id_corp", String.Empty)
                        @Html.ValidationMessageFor(model => model.id_corp)
                    </td>
                </tr>
            </table>

            


        </fieldset>

        <div class="modal-footer">

            <input type="submit" class="btn btn-primary" value=" Ajouter " />
            <button type="button" class="btn btn-danger" data-dismiss="modal">Annuler</button>

        </div>

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
